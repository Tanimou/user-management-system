{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "Full-stack user management system with Vue 3 SPA and Vercel serverless functions",
  "private": true,
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=web",
    "dev:api": "vercel dev",
    "build": "npm run build:web && npm run build:api",
    "build:web": "npm run build --workspace=web",
    "build:api": "npm run build --workspace=api",
    "test": "npm run test:api && npm run test:web",
    "test:api": "npm run test --workspace=api -- --run",
    "test:web": "npm run test:run --workspace=web",
    "test:coverage": "npm run test:coverage --workspace=api",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "migrate:prod": "tsx scripts/migrate-production.ts",
    "postdeploy": "npm run migrate:prod",
    "generate:secrets": "node scripts/generate-secrets.js",
    "db:migrate": "npm run db:migrate --workspace=api",
    "db:generate": "npm run db:generate --workspace=api",
    "db:studio": "npm run db:studio --workspace=api"
  },
  "keywords": [
    "user-management",
    "vue3",
    "vercel",
    "serverless",
    "postgresql",
    "prisma",
    "jwt-auth"
  ],
  "author": "Development Team",
  "license": "MIT",
  "devDependencies": {
    "inherits": "^2.0.4",
    "tsx": "^4.20.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "joi": "^18.0.1"
  }
}
